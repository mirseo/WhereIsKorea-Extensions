{
  "manifest_version": 3,
  "name": "koreaSelector",
  "version": "1.0",
  "description": "회원가입 창에서 대한민국을 자동으로 찾아주는 확장프로그램입니다!",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "koreaSelector",
    "default_icon": {
      "16": "static/koreaselector.svg",
      "32": "static/koreaselector.svg",
      "48": "static/koreaselector.svg",
      "128": "static/koreaselector.svg"
    }
  },
  "icons": {
    "16": "static/koreaselector.svg",
    "32": "static/koreaselector.svg",
    "48": "static/koreaselector.svg",
    "128": "static/koreaselector.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}